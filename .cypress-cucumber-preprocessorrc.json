{
  "json": {
    "enabled": true,
    "formatter": "./cucumber-formatter/cucumber-json-formatter",
    "output": "./reports/cucumber-report.json"
  },
  "messages": {
    "enabled": true,
    "output": "./reports/cucumber-messages.ndjson"
  },
  "html": {
    "enabled": true
  },
  "stepDefinitions": [
    "[filepath]/**/*.{js,ts}",
    "[filepath].{js,ts}",
    "cypress/e2e/step_definitions/*.{js,ts}",
    "[filepath]\\***.{js,ts}",
    "[filepath].{js,ts}",
    "cypress\\e2e\\step_definitions\\*.{js,ts}"
  ]
}
